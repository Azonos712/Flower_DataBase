<Window x:Class="FlowerClient.DlgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerClient"
        mc:Ignorable="d"
        Title="Title" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" TextElement.FontSize="14">
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Margin="10" x:Name="txt_info" IsEnabled="False" Text="Content" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Grid.Row="0" MaxWidth="250"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                <Button x:Name="btn_lft" Margin="10" Content="ОК" Width="100" Click="btn_lft_Click"/>
                <Button x:Name="btn_rght" Margin="10" Content="ОК" Width="100" Click="btn_rght_Click"/>
            </StackPanel>
            </DockPanel>
    </Grid>
</Window>
