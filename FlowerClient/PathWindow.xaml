<Window x:Class="FlowerClient.PathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:FlowerClient"
        mc:Ignorable="d"
        Title="Выбор пути" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" TextElement.FontSize="14">
    <Grid>
        <DockPanel>
            <TextBox DockPanel.Dock="Top" Margin="10" x:Name="txt_path" materialDesign:HintAssist.Hint="Путь к папке с фотографиями" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="350" MaxWidth="350"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                <Button x:Name="btn_apply" Margin="10" Content="Подтвердить" Width="150" Click="Btn_apply_Click"/>
                <Button x:Name="btn_view" Margin="10" Content="Обзор" Width="150" Click="Btn_view_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
