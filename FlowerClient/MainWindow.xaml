            <Button x:Name="search_btn" Content="Поиск" Click="Search_btn_Click" Margin="10" Width="150"/>
            <Button x:Name="reset_btn"  Content="Сброс"  Click="reset_btn_Click" Margin="10" Width="150"></Button>
        </StackPanel>

