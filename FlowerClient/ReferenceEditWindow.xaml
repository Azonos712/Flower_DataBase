<Window x:Class="FlowerClient.ReferenceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:FlowerClient"
        mc:Ignorable="d"
        Title="Справочная информация" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" TextElement.FontSize="14">
    <Grid>
        <DockPanel>
            <TextBox DockPanel.Dock="Top" Margin="10" x:Name="txt_info" materialDesign:HintAssist.Hint="" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="300" MaxWidth="300"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                <Button x:Name="btn_ok" Margin="10" Content="ОК" Width="130" Click="btn_ok_Click"/>
                <Button x:Name="btn_cancel" Margin="10" Content="Отмена" Width="130" Click="btn_cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
